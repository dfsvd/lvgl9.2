{
  "version": 3,
  "configurePresets": [
    {
      "name": "arm-linux-cross-v5",
      "displayName": "ARM Linux GCC 15.2.1",
      "description": "Cross-compile using hard-float toolchain (single preset).",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/Toolchain-arm.cmake",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ]
}